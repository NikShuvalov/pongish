<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.charlesdrews.pongish.game.GameActivity">

    <com.charlesdrews.pongish.game.PongView
        android:id="@+id/game_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:background="@drawable/dashed_line"
        android:layout_centerHorizontal="true"
        android:layout_width="2dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/play_pause_button"
            android:src="@drawable/pause_icon"
            android:contentDescription="@string/play_pause_icon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="@dimen/activity_horizontal_margin"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/restart_button"
            android:src="@drawable/restart_icon"
            android:contentDescription="@string/restart_icon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
